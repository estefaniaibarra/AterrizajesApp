<Window x:Class="AterrizajesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AterrizajesApp" xmlns:vm="clr-namespace:AterrizajesApp.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800"  Height="450" Width="800"  Background="Black">
    <Window.DataContext>
        <vm:AterrizajesViewModel></vm:AterrizajesViewModel>
    </Window.DataContext>
    <Grid>
      
        <Grid.RowDefinitions>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".25*"/>
        </Grid.RowDefinitions>

        <Grid Margin="15,15,15,0" Grid.Row="0" Background="#242424">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".15*"/>
                <ColumnDefinition Width=".45*"/>
                <ColumnDefinition Width=".40*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Assets/Avion.png" Grid.Column="0" Margin="10"></Image>
            <TextBlock Text="Salidas" Grid.Column="1" 
                       Foreground="#F5E307" 
                       Typography.Capitals="AllSmallCaps"
                       FontFamily="Assets/MF RooneySans Regular.ttf" 
                       FontSize="55" VerticalAlignment="Center" 
                       HorizontalAlignment="Left"/>
            <StackPanel Margin="0,0,10,0" VerticalAlignment="Center" Grid.Column="2">
                <Label Foreground="White">Filtrar por fecha:</Label>
                <DatePicker SelectedDateChanged="DatePicker_SelectedDateChanged" SelectedDate="{Binding FechaFiltro}"></DatePicker>

            </StackPanel>
        </Grid>
        <DataGrid IsReadOnly="True" VerticalScrollBarVisibility="Auto"  ItemsSource="{Binding ListaAterrizajesFiltrada}" GridLinesVisibility="None" HorizontalScrollBarVisibility="Disabled" HeadersVisibility="Column" AutoGenerateColumns="False"  Background="#242424" Margin="15,0,15,15" Grid.Row="2" Height="auto" x:Name="Dtg" BorderThickness="0" BorderBrush="#242424">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Typography.Capitals" Value="AllSmallCaps"/>
                    <Setter Property="Foreground" Value="white"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Margin" Value="10,15,15,0"/>
                    <Setter Property="Padding" Value="5,0,0,5"/>
                    <Setter Property="BorderBrush" Value="#242424"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontFamily" Value="/Assets/MF RooneySans Regular.ttf"/>
                    <Setter Property="Background" Value="#242424"/>
                </Style>
                <Style  TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Typography.Capitals" Value="AllSmallCaps"></Setter>
                    <Setter Property="Foreground" Value="#F5E307"/>
                    <Setter Property="Margin" Value="10,10,10,0"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontFamily" Value="/Assets/MF RooneySans Regular.ttf"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns >
                <DataGridTextColumn Binding="{Binding Tiempo}" Width=".40*" Header="Hora y fecha de salida:"/>
                <DataGridTextColumn Binding="{Binding Destino}" Width=".20*" Header="Destino:"/>
                <DataGridTextColumn Binding="{Binding Vuelo}" Width=".15*" Header="Vuelo:"/>
                <DataGridTextColumn Binding="{Binding Puerta}" Width=".15*" Header="Puerto:"/>
                <DataGridTextColumn Binding="{Binding Status}" Width=".20*" Header="Status:"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
